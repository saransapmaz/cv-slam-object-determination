<?xml version="1.0"?>
<robot name="tekerlekli">

    <material name="rastgele">
        <color rgba="0.8 0.0 0.2 1"/>        
    </material>
    <material name="govde">
        <color rgba="1 0.5 0.5 1"/>        
    </material>
    <material name="black">
        <color rgba="0.0 0.0 0.0 1"/>              
    </material>
    <material name="sensor">
        <color rgba="0.1 0.5 0.1 1"/>              
    </material>


    <!--Robotun gövdesi-->
    <link name="base_link">
     
        <visual>
            <geometry>
                <box size="0.16 0.16 0.16"/>
            </geometry>
            <material name="govde"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.16 0.16 0.16"/>
            </geometry>   
        </collision>  
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.0375" iyz="0.0" izz="0.375"/>
        </inertial>            
        
    </link>
   
    <!--Gazeboda hareket için-->
    <gazebo>
        <plugin name="differential_drive_controller"
                filename="libgazebo_ros_diff_drive.so">
            <leftJoint>lwheel_t_base</leftJoint>
            <rightJoint>rwheel_t_base</rightJoint>
            <legacyMode>false</legacyMode>
            <odometryFrame>scanmatcher_frame</odometryFrame>
            <odometryTopic>slam_out_pose</odometryTopic>
            <robotBaseFrame>base_link</robotBaseFrame>
            <wheelSeparation>0.25</wheelSeparation>
            <wheelDiameter>0.06</wheelDiameter>
            <publishWheelJointState>true</publishWheelJointState>
        </plugin>
    </gazebo>
    <gazebo>
        <plugin name="joint_state_publisher"
                filename="libgazebo_ros_joint_state_publisher.so">
            <jointName>caster_to_base, wcaster_to_caster</jointName>
        </plugin>
    </gazebo>
    <gazebo reference="lazer_sensor">
        <sensor type="ray" name="laser">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>40</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <resolution>1</resolution>
                        <min_angle>-3.1415926536</min_angle>
                        <max_angle>3.1415926536</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.1</min>
                    <max>8</max>
                    <resolution>0.1</resolution>
                </range>
            </ray>
            <plugin name="Lidar" filename="libgazebo_ros_laser.so">
                <topicName>/scan</topicName>
                <frameName>lazer_sensor</frameName>
            </plugin>
        </sensor>
    </gazebo>

</robot>
